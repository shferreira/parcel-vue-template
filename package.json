{
  "license": "MIT",
  "scripts": {
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "parcel build app/index.html --no-cache --public-url .",
    "deploy": "yarn rebuild && echo '/* /index.html 200' >| dist/_redirects && netlify -p dist",
    "serve": "parcel app/index.html",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "esw": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jest"
  },
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^1.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "parcel-bundler": "^1.7.1",
    "stylus": "^0.54.5",
    "vue-hot-reload-api": "^2.3.0",
    "vue-template-compiler": "^2.5.16"
  },
  "optionalDependencies": {
    "@vue/test-utils": "^1.0.0-beta.14",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-vue": "^4.4.0",
    "eslint-watch": "^3.1.4",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-serializer-vue": "^1.0.0",
    "vue-jest": "^2.5.0"
  },
  "browserslist": [
    "> 1%",
    "last 8 versions",
    "ie 9"
  ],
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended",
      "plugin:jest/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops",
      "jest"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 1
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  }
}
