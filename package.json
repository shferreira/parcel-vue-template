{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "clean": "rimraf dist .cache",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "lint:css": "stylelint '**/*.less' '**/*.vue' --syntax less",
    "lint:watch": "esw app/**/*.vue app/*.vue -w --color --clear",
    "test": "jasmine"
  },
  "dependencies": {
    "vue": "^2.6.8"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@vue/component-compiler-utils": "^3.0.0",
    "parcel": "^1.11.0",
    "parcel-plugin-compress": "^1.0.7",
    "parcel-plugin-inliner": "^1.0.6",
    "postcss-remove-unused-css": "^1.0.4",
    "vue-hot-reload-api": "^2.3.4",
    "vue-template-compiler": "^2.6.8"
  },
  "optionalDependencies": {
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^12.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "eslint-watch": "^6.0.1",
    "jasmine": "^3.5.0",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-processor-html": "^1.0.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/transform-runtime"
    ]
  },
  "browserslist": [
    ">0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-remove-unused-css": {
        "path": "./app",
        "exts": [
          ".js",
          ".vue",
          ".html"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops",
      "unicorn"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard"
  }
}
