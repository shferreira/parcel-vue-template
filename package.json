{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache && yarn purify",
    "deploy": "yarn rebuild && echo '/* /index.html 200' >| dist/_redirects && netlify -p dist",
    "purify": "purifycss dist/*.css app/**/*.vue --min --out dist/*.css",
    "clean": "rimraf dist .cache",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "lint:css": "stylelint '**/*.less' '**/*.vue' --syntax less",
    "lint:watch": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jest"
  },
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^2.1.0",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "less": "^3.5.3",
    "parcel-bundler": "^1.9.4",
    "postcss-nested": "^3.0.0",
    "typescript": "^2.9.2",
    "vue-hot-reload-api": "^2.3.0",
    "vue-template-compiler": "^2.5.16"
  },
  "optionalDependencies": {
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-vue": "^4.4.0",
    "eslint-watch": "^4.0.1",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-vue-preprocessor": "^1.4.0",
    "purifycss": "^1.2.6",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "vue-jest": "^2.6.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-runtime",
      "import-glob"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 8 versions",
    "ie 9"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-nested": {}
    }
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended",
      "plugin:jest/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops",
      "jest"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 1
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard"
  }
}
